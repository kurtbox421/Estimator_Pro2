rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Only allow users to read/write their own files
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
