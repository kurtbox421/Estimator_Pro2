rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only allow users to read/write their own assets (e.g., branding logos)
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /branding/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
